import math
n=int(input("Enter The no of Rows: "))
if(n%2==1):
    for i in range(1,n+1):
        for j in range(1,n+1):
            if (i==math.ceil(n/2)) or (j-i==3) or (j+i==11):
                print("*",end=" ")
            else:
                print(" ",end=" ")
        print()
else:
    print("Only Odd Numbers are Acceptable")
